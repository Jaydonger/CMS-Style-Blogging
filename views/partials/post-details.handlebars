<div class="card">
  <article class="card-header">
    <div>
      <h1><a href="/post/{{id}}">{{title}}</a></h1>
      <div>
        posted by {{ user.username }} on {{ format_date created_on }}
      </div>
    </div>
  </article>
      <div class="card-body">
        <ol>Comments:
        {{#each Comments as |comment|}}
        <li>{{ comment.description }}</li>
        <p class="tiny">Comment from {{ comment.user.username }} on {{ format_date comment.created_on}}</p>
        {{/each}}
        </ol>
      </div>
</div>





